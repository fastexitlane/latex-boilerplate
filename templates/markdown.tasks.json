{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "latexmk",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh pandoc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": ["clean"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh clean",
            "group": "none",
        }
    ]
}