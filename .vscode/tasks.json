{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "latexmk",
            "type": "shell",
            "command": "latexmk -latexoption=\"-shell-escape\" main.tex",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "clean"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "latexmk -C"
        }
    ]
}